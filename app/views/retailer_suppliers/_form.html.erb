<div class='col-sm-7 col-sm-offset-1'>
<%= simple_form_for(@connection,:html => { :class => "form-horizontal" }) do |f| %>
 <%= f.error_notification %>

 <div class="form-inputs">
   <%= f.input :account_number, label: "Supplier Account#"%>
   <%= f.input :message, label: "Message" %>
   <%= f.association :retailer, :as => :hidden if current_user.retailer?%>
   <%= f.association :supplier, :as => :hidden if current_user.supplier?%>
 </div>

 <div class="form-actions">
   <%= f.button :submit,"Send Request", class: "btn btn-primary" %>
 </div>
<% end %>
<%= link_to 'Back', stations_path %>
</div>
