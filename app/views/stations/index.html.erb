<p id="notice"><%= notice %></p>

<h1>Listing Stations</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Business name</th>
      <th>Tax</th>
      <th>Phone number</th>
      <th>Contact person</th>
      <th>Cell number</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Station reg number</th>
      <th>Retailer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr>
        <td><%= station.brand %></td>
        <td><%= station.business_name %></td>
        <td><%= station.tax_id %></td>
        <td><%= station.phone_number %></td>
        <td><%= station.contact_person %></td>
        <td><%= station.cell_number %></td>
        <td><%= station.address1 %></td>
        <td><%= station.address2 %></td>
        <td><%= station.city %></td>
        <td><%= station.state %></td>
        <td><%= station.zip %></td>
        <td><%= station.station_reg_number %></td>
        <td><%= station.retailer %></td>
        <td><%= link_to 'Show', station %></td>
        <td><%= link_to 'Edit', edit_station_path(station) %></td>
        <td><%= link_to 'Destroy', station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

