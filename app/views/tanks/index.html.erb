<p id="notice"><%= notice %></p>

<h1>Listing Tanks</h1>

<table>
  <thead>
    <tr>
      <th>Type of fuel</th>
      <th>Size</th>
      <th>Registration</th>
      <th>Station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tanks.each do |tank| %>
    <tr>
      <td><%= tank.type_of_fuel %></td>
      <td><%= tank.size %></td>
      <td><%= tank.registration_id %></td>
      <td><%= tank.station %></td>
      <td><%= link_to 'Show', station_tank_path(:id => tank.id,
                                                  :station_id => @station.id) %></td>
      <td><%= link_to 'Edit', edit_station_tank_path(:id => tank.id,
                                                  :station_id => @station.id)%></td>
      <td><%= link_to 'Destroy', [@station, tank], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tank', new_station_tank_path(@station, @tank) %>
